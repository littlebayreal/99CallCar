/* pages/selectdestination/selectdestination.wxss */

.view_input_class {
  width: 100%;
  height: 6vh;
  border: 2rpx solid #fc975c;
  padding: 10rpx;
}

.input_class {
  height: 6vh;
  width: 100%;
  line-height: 6vh;
  margin: 0 20rpx
}

.view_list {
  height: 92vh;
  width: 100%;
}

.scroll_class {
  height: 100%;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
}

.address_item_class {
  height: 100rpx;
  width: 100%;
  border-bottom: 2rpx solid #d5d5d5;
  background: #fff;
  display: flex;
  padding: 40rpx 80rpx;
  flex-direction: column;
  justify-content: space-between
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
