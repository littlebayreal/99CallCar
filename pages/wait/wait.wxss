/* pages/wait/wait.wxss */
.title_class{
  background: #fff;
  border: 1rpx solid #d5d5d5;
  width: 90%;
  height: 80rpx;
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.bell_image_class{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx
}
.title_view_class{
  margin-left: 20rpx;
  font-size: 24rpx;
}
.content_top{
  font-size: 48rpx;
  text-align: center;
  width: 100%;
  margin-top: 30rpx;
}
.content_middle{
  font-size: 24rpx;
  text-align: center;
  width: 100%;
  margin-top: 30rpx;
}
.progress_box{
    position: relative;
    width:220px;
    height: 220px; 
    display: flex; 
    align-items: center;
    flex-direction: column;
    justify-content: center;
  }
   .progress_bg{
    position: absolute;
    width:220px;
    height: 220px;
  }
  .progress_canvas{
    width:220px;
    height: 220px;
  }
  .progress_text{
    position: absolute;
    display: flex; 
    align-items: center;
    flex-direction: column;
    justify-content: center
  }
  .progress_info{  
    font-size: 26rpx;
    color: #666666;
    letter-spacing: 2rpx;
    padding-bottom: 26rpx;
   
  }
  .progress_time{
    font-size: 55rpx;
    border-radius:50px;
    text-align: center;
    color: #fc9153;
  }