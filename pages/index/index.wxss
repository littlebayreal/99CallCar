.nav-item {
  height: 100%;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: inline-block;
  line-height: 80rpx;
  text-align: center;
}

.nav-item.active {
  color: #fc975c;
}

.map_class {
  height: 62vh;
  width: 100%;
}

.map_class_small {
  height: 58vh;
}

.bottom {
  width: 100%;
  height: 30vh;
}

.bottom_large {
  width: 100%;
  height: 32vh;
}

.bottom_toggle {
  width: 40%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.bottom_active {
  width: 50%;
  border-radius: 50rpx;
  border: 1rpx solid#fc9153;
  background: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 6vh;
  height: 6vh;
}

.bottom_dis {
  width: 50%;
  height: 6vh;
  background: #fff;
  border-radius: 50rpx;
  border:1rpx solid #d5d5d5;
  font-size: 30rpx;
  line-height: 6vh;
  text-align: center;
}

.bottom_class {
  display: flex;
  height: 8vh;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}

.bottom_dis::after {
  border: none;
}
.bottom_time{
  height: 70rpx;
  width: 100%;
}
.order_time {
  height: 70rpx;
  line-height: 70rpx;
  text-align: left;
  margin-left: 40rpx;
}

.bottom_start {
  width: 100%;
  height: 70rpx;
  margin-top: 10rpx;
  text-align: center;
  line-height: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.circle_str {
  height: 30rpx;
  width: 30rpx;
  border-radius: 50%;
  background: #3cbca3;
  margin-left: 40rpx;
}

.bottom_text_class {
  color: #333;
  margin-left: 10rpx;
}

.circle_end {
  height: 30rpx;
  width: 30rpx;
  border-radius: 50%;
  background: #fc9153;
  margin-left: 40rpx;
}

.botom_input_class {
  color: #333;
  text-align: left;
  margin-left: 10rpx;
}

.bottom_scan {
  color: #ccc;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bottom_scan_img {
  height: 30rpx;
  width: 30rpx;
  margin-left: 40rpx;
}

.bottom_scan_text {
  height: 80rpx;
  line-height: 80rpx;
  text-align: left center;
  margin-left: 10rpx;
}

.bottom_button {
  background: #fc9153;
  border-radius: 40rpx;
  width: 60%;
  text-align: center;
  line-height: 8vh;
}
.cost_class{
  position: relative;
  width: 100%;
  height: 80rpx;
  text-align: center;
  color: #fc9153;
}
