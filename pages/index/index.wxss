}

.bottom_class {
  display: flex;
  height: 8vh;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}

.bottom_dis::after {
  border: none;
}

.bottom_time {
  height: 70rpx;
  width: 100%;
}

.order_time {
  height: 70rpx;
  line-height: 70rpx;
  text-align: left;
  margin-left: 40rpx;
}

.bottom_start {
  width: 100%;
  height: 70rpx;
  margin-top: 10rpx;
  text-align: center;
  line-height: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.circle_str {
  height: 30rpx;
  width: 30rpx;
  border-radius: 50%;
  background: #3cbca3;
  margin-left: 40rpx;
}

.bottom_text_class {
  color: #333;
  margin-left: 10rpx;
}

.circle_end {
  height: 30rpx;
  width: 30rpx;
  border-radius: 50%;
  background: #fc9153;
  margin-left: 40rpx;
}

.botom_input_class {
  color: #333;
  text-align: left;
  margin-left: 10rpx;
  font-size: 30rpx;
  width: 100%
}

.bottom_scan {
  color: #ccc;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bottom_scan_img {
  height: 30rpx;
  width: 30rpx;
  margin-left: 40rpx;
}

.bottom_scan_text {
  height: 80rpx;
  line-height: 80rpx;
  text-align: left center;
  margin-left: 10rpx;
}

.bottom_button {
  background: #fc9153;
  border-radius: 40rpx;
  width: 60%;
  text-align: center;
  line-height: 8vh;
}

.cost_class {
  position: relative;
  width: 100%;
  height: 80rpx;
  text-align: center;
  color: #fc9153;
}

/*button*/

.btn {
  width: 80%;
  padding: 20rpx 0;
  border-radius: 10rpx;
  text-align: center;
  margin: 40rpx 10%;
  background: #000;
  color: #fff;
}

/*mask*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/

.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 3px;
}

.drawer_title {
  padding: 15px;
  font: 20px "microsoft yahei";
  text-align: center;
}

.drawer_content {
  height: 210px;
  /* overflow-y: scroll; 超出父盒子高度可滚动 */
}

.btn_ok {
  padding: 10px;
  font: 20px "microsoft yahei";
  text-align: center;
  border-top: 1px solid #e8e8ea;
  color: #3cc51f;
}

