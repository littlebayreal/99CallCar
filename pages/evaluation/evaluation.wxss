/* pages/evaluation/evaluation.wxss */

.card_container {
  width: 90%;
  background: #fff;
  margin-top: 20rpx;
  box-shadow: 3px 5px 10px #e0e0e0;
  box-sizing: border-box;
  border: 1px solid #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.title_class {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 30rpx 0 10rpx 0;
  border-bottom: 1rpx solid #d5d5d5;
}

.title_image_class {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx
}

.title_content_class {
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title_content_name_class {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.title_name_image_class {
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

.title_content_carnum_class {
  font-size: 28rpx;
  background: #e0e0e0;
  border: 1rpx solid #000;
  width: 200rpx;
  margin: 10rpx 0;
}
.title_content_number_class{
  font-size: 24rpx;
}
.title_content_cartype_class {
  text-align: left;
  font-size: 28rpx;
  color: #d5d5d5;
  margin: 10rpx 0;
}

.title_right_class {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.content_class {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content_cost_class {
  width: 100%;
  height: 80rpx;
  font-size: 36rpx;
  text-align: center;
  line-height: 80rpx;
}

.content_cost_detail {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 30rpx;
  color: #d5d5d5;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 1rpx solid #d5d5d5;
}

.content_evaluation {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.evaluation_stars {
  width: 400rpx;
  height: 50rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.stars_solid {
  padding-right: 10rpx;
  color: #ffd936;
  font-size: 50rpx;
}

.stars_empty {
  color: #ffd936;
  padding-right: 10rpx;
  font-size: 50rpx;
}

.evaluation_show {
  font-size: 30rpx;
  color: #fc975c;
  height: 80rpx;
  line-height: 80rpx;
}

.bottom_class {
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  bottom: 0rpx;
  background: #fff;
  width: 100%;
  border: 1rpx solid #d5d5d5;
}

.need_help {
  width: 49%;
  border-right: 1rpx solid #d5d5d5;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}

.end_trip {
  width: 49%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.evaluation_button_class{
  width: 90%;
  background: #fc975c;
  margin-top: 30rpx;
}
